<Page x:ConnectionId='1'
    x:Class="MusicPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:MusicPlayer.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
                                  
    RequestedTheme="Light">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="sliderStyle.xaml"/>
                <ResourceDictionary Source="textStyle.xaml"/>
                <ResourceDictionary Source="progressRingStyle.xaml"/>
                <ResourceDictionary Source="buttonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local1:ProgressConvert x:Key="progressConvert"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid x:ConnectionId='2' Name="main_grid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="songTile_textblock.FontSize" Value="15"/>
                        <Setter Target="main_listview.Visibility" Value="Collapsed"/>
                        <Setter Target="title_stackPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="listShow_button.Visibility" Value="Visible"/>
                        <Setter Target="playTitle_textblock.Visibility" Value="Visible"/>
                        <Setter Target="line_textblock.Visibility" Value="Visible"/>
                        <Setter Target="playArtist_textblock.Visibility" Value="Visible"/>
                        <Setter Target="main_image.Height" Value="200"/>
                        <Setter Target="main_image. Width" Value="200"/>
                        <Setter Target="main_progressRing.Height" Value="50"/>
                        <Setter Target="main_progressRing.Width" Value="50"/>
                        <Setter Target="the_colume.Width" Value="Auto"/>
                        <Setter Target="second_colume.Width" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="main_listview.Visibility" Value="Visible"/>
                        <Setter Target="title_stackPanel.Visibility" Value="Visible"/>
                        <Setter Target="the_colume.Width" Value="*"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView x:ConnectionId='3' Name="MusicList_SplitView"
                   OpenPaneLength="200"
                   IsPaneOpen="False"
                   DisplayMode="Inline">
            <SplitView.Pane>
                <Grid x:ConnectionId='4' Name="musicListShow_grid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button x:ConnectionId='5' Name="addMusicList_button"
                            Height="30"
                            Width="200"
                            Margin="0,30,0,0"
                            Background="Transparent"
                            Content="添加歌单"
                            Style="{StaticResource button_Style}"
                                                             />
                    <ListView x:ConnectionId='6' Name="MusicList_ListView"
                              Grid.Row="1"
                          IsItemClickEnabled="True"
                                                                   
                                                                      >
                        <ListView.ItemTemplate>
                            <DataTemplate                              >
                                <TextBlock x:ConnectionId='7'                                />
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </Grid>
               
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:ConnectionId='8' x:Name="the_colume"
                              Width="*"/>
                        <ColumnDefinition x:ConnectionId='9' x:Name="second_colume"
                              Width="0"/>
                        <ColumnDefinition x:ConnectionId='10' x:Name="third_colume"
                              Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ProgressRing x:ConnectionId='11' Name="main_progressRing"
                      Grid.Row="1"
                      Grid.RowSpan="2"
                      Height="150"
                      Width="150"
                      Style="{StaticResource progressRing_Style}"
                      Visibility="Collapsed"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                    <StackPanel x:ConnectionId='12' Name="title_stackPanel"
                    Orientation="Horizontal">
                        <!--<TextBlock Name="name_textblock"
                       Text="Own MusicPlayer"                   
                       Margin="30,0,0,0"
                       FontSize="15"
                       VerticalAlignment="Center"/>-->
                        <TextBlock x:ConnectionId='52' Name="songNumStr_textBlock"
                       x:Uid="songNumStr_textBlock"                 
                       Style="{StaticResource songTextStyle}"
                       Margin="33,0,5,0"
                       VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='53' Name="songNum_textBlock"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Style="{StaticResource songTextStyle}"/>
                    </StackPanel>

                    <Grid x:ConnectionId='13' Name="listView_grid"
              Grid.Row="1"
              Grid.RowSpan="2">
                        <!--<Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>-->
                        <!--<Grid BorderThickness="1"
                  BorderBrush="Gray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="53"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="songName_textBlock"
                           x:Uid="songName_textBlock"
                           Style="{StaticResource songTextStyle}"/>
                <TextBlock Name="singerName_textbock"
                           x:Uid="singerName_textbock"
                           Grid.Column="1"
                           Style="{StaticResource songTextStyle}"/>
                <TextBlock Name="time_textblock"
                           x:Uid="time_textblock"
                           Grid.Column="2"
                           Style="{StaticResource songTextStyle}"/>
            </Grid>-->
                        <ListView x:ConnectionId='44' Name="main_listview"
                      SelectionMode="Single"                      
                      AllowDrop="True"
                      CanReorderItems="True"
                      IsSwipeEnabled="True"
                                                                       
                                                      >
                            <ListView.ItemTemplate>
                                <DataTemplate                          >
                                    <StackPanel x:ConnectionId='45' Name="rightClick_stackPanel"
                                    IsDoubleTapEnabled="True"
                                                                                     
                                                                                   >
                                        <local:LocalMusicControl/>
                                        <StackPanel.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem x:ConnectionId='46' Name="play_menu"
                                                    x:Uid="play_menu"
                                                                           />
                                                <MenuFlyoutItem x:ConnectionId='47' Name="stop_menu"
                                                    x:Uid="stop_menu"
                                                                           />
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem x:ConnectionId='48' Name="addToList_menu"
                                                                   Text="添加到歌单"
                                                                                            >
                                                </MenuFlyoutItem>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem x:ConnectionId='49' Name="removeFromList_menu"
                                                    x:Uid="removeFromList_menu"
                                                                                     />
                                                <MenuFlyoutSubItem Name="removeFromLocal_menu"
                                                       x:Uid="removeFromLocal_menu">
                                                    <MenuFlyoutItem x:ConnectionId='50' Name="recycleBin_menu"
                                                        x:Uid="recycleBin_menu"
                                                                                     />
                                                    <MenuFlyoutItem x:ConnectionId='51' Name="direct_menu"
                                                        x:Uid="direct_menu"
                                                                                 />
                                                </MenuFlyoutSubItem>
                                                <MenuFlyoutItem Name="cancle_menu"
                                                    x:Uid="cancle_menu"/>
                                            </MenuFlyout>
                                        </StackPanel.ContextFlyout>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                       
                    </Grid>
                    <Grid x:ConnectionId='14' Name="MusicShow_Grid"
                          Grid.Row="1"
                          Grid.RowSpan="2"
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:ConnectionId='36' Name="addMusic_button"
                                HorizontalAlignment="Right"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE710;"
                                Style="{StaticResource button_Style}"
                                Background="Transparent"/>
                        <TextBlock x:ConnectionId='37' Name="musidlistTitle_textblock"
                                   FontSize="17"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <Button x:ConnectionId='38' Name="back_Button"
                                HorizontalAlignment="Left"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE72B;"
                                Style="{StaticResource button_Style}"
                                Background="Transparent"
                                                         />

                        <ListView x:ConnectionId='39' Name="MusicShow_ListView"
                                  Grid.Row="1"
                                                                       
                                                                                        >
                            <ListView.ItemTemplate>
                                <DataTemplate                          >
                                    <Grid x:ConnectionId='40' Height="70"
                                          Margin="10,0,0,0">
                                        <StackPanel Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                            <TextBlock x:ConnectionId='41' Name="listmusic_title"
                                                   FontSize="17"
                                                   FontWeight="Bold"
                                                                        />
                                            <TextBlock x:ConnectionId='42' Name="listmusic_artist"
                                                   FontSize="13"
                                                   FontWeight="Thin"
                                                                         />
                                            <TextBlock x:ConnectionId='43' Name="listmusic_duration"
                                                   FontSize="13"
                                                   FontWeight="Thin"
                                                                                   />
                                        </StackPanel>
                                    </Grid>
                                    
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                  
                    <ScrollViewer x:ConnectionId='15' Name="main_scrollViewer"
                      Grid.Row="1"
                      Grid.Column="2"
                      IsDeferredScrollingEnabled="False"
                      HorizontalScrollMode="Enabled" 
                      VerticalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Hidden"  
                      VerticalScrollBarVisibility="Auto">
                        <StackPanel x:ConnectionId='29' Name="songDetails_grid"
                        Orientation="Vertical">
                            <Image x:ConnectionId='30' Name="main_image"
                       Height="230"
                       Width="230" 
                       HorizontalAlignment="Center"
                       Source="Assets/music_1.png">
                            </Image>
                            <TextBlock x:ConnectionId='31' Name="songTile_textblock"
                               FontSize="20"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"/>
                            <TextBlock x:ConnectionId='32' Name="artist_textblock"
                               FontSize="15"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"/>
                            <TextBlock x:ConnectionId='33' Name="album_textblock"
                               FontSize="15"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"/>
                            <Button x:ConnectionId='34' Name="lyric_button"
                        Background="Transparent"
                            HorizontalAlignment="Center"
                        FontWeight="Bold"
                            x:Uid="lyric_button"
                        Style="{StaticResource button_Style}"
                                                      />
                            <TextBlock x:ConnectionId='35' Name="lyric_textblock"
                           FontSize="15"
                           Margin="50,0,50,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                    <!--<ProgressBar Name="main_progressbar"
                     Visibility="Collapsed"/>
        <ProgressBar Name="main_progressbar2"
                     Visibility="Collapsed"/>-->
                    <StackPanel x:ConnectionId='16' Name="slider_stackPanel"
                    Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                        <Slider x:ConnectionId='24' Name="main_slider"
                    Style="{StaticResource mainSliderStyle}"
                    Background="White"
                    Margin="30,0,30,-20"
                    IsThumbToolTipEnabled="False"
                    Value="{Binding ElementName=main_mediaElement,Path=Position,Converter={StaticResource progressConvert }, Mode=TwoWay}"
                                                             >
                        </Slider>
                        <Grid Margin="30,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='25' Name="playTitle_textblock"
                           FontSize="15"
                           Visibility="Collapsed"
                           HorizontalAlignment="Left"/>
                            <TextBlock x:ConnectionId='26' Name="line_textblock"
                           Grid.Column="1"
                           FontSize="15"
                           Visibility="Collapsed"/>
                            <TextBlock x:ConnectionId='27' Name="playArtist_textblock"
                           Grid.Column="2"
                           FontSize="15"
                           Visibility="Collapsed"/>
                            <TextBlock x:ConnectionId='28' Name="playTime_textblock"
                           Grid.Column="3"
                           FontSize="15"
                           FontWeight="Thin"
                           Margin="0,0,30,0"
                           HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                    <MediaElement x:ConnectionId='17' Name="main_mediaElement"
                      AutoPlay="True"
                      Height="30"
                      Width="30"
                      Visibility="Collapsed"
                      AudioCategory="BackgroundCapableMedia"
                                                                                   />
                    <ContentDialog x:ConnectionId='18' x:Name="addList_ContentDialog"
                       PrimaryButtonText="新增" 
                       IsPrimaryButtonEnabled="True"
                       CloseButtonText="取消">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:ConnectionId='22' Name="addList_textblock"
                           Text="歌单名"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                            <TextBox x:ConnectionId='23' Name="list_textbox"
                         Height="30"
                         Width="200"/>
                        </StackPanel>
                    </ContentDialog>
                    <ContentDialog x:ConnectionId='19' x:Name="musicList_ContentDialog"
                                   PrimaryButtonText="确定"
                       IsPrimaryButtonEnabled="False"
                       CloseButtonText="取消"
                                                                          
                                                                          >

                        <ListView x:ConnectionId='20' Name="MusicList2_ListView"
                              Grid.Row="1"
                          IsItemClickEnabled="True"
                                                                   
                                                                                         
                                                                           >
                            <ListView.ItemTemplate>
                                <DataTemplate                              >
                                    <TextBlock x:ConnectionId='21'                                />
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>
                    </ContentDialog>

                </Grid>
            </SplitView.Content>
        </SplitView>
       
    </Grid>
        
    <Page.BottomAppBar>
        <CommandBar x:ConnectionId='54' Name="main_commandBar"
                    RequestedTheme="Light">
            <AppBarButton x:ConnectionId='55' Name="listShow_button"
                          Icon="MusicInfo"
                          x:Uid="listShow_button"
                          Visibility="Collapsed"
                                                       />
            <AppBarButton x:ConnectionId='56' Name="musicList_button"
                          Icon="List"
                          x:Uid="musicList_button"
                                                        />
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='57' Name="back_button"
                          Icon="Previous"
                          x:Uid="back_button"
                                                     />
            <AppBarButton x:ConnectionId='58' Name="play_button"
                          Icon="Play"
                          x:Uid="play_button"
                                                   />
            <AppBarButton x:ConnectionId='59' Name="forward_button"
                          Icon="Next"
                          x:Uid="forward_button"
                                                        />
            <AppBarButton x:ConnectionId='60' Name="model_button"
                          Icon="RepeatAll"
                          x:Uid="model_button">
                <AppBarButton.Flyout>
                    <MenuFlyout x:ConnectionId='83' x:Name="model_flyout">
                        <MenuFlyoutItem x:ConnectionId='84' Name="single_menu" 
                                        x:Uid="single_menu"
                                        FontSize="13"
                                                                 />
                        <MenuFlyoutItem x:ConnectionId='85' Name="order_menu"
                                        x:Uid="order_menu"
                                        FontSize="13"
                                                                />
                        <MenuFlyoutItem x:ConnectionId='86' Name="random_menu"
                                        x:Uid="random_menu"
                                        FontSize="13"
                                                                 />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton x:ConnectionId='61' Name="stop_button"
                          Icon="Stop"
                          x:Uid="stop_button"
                                                      />
            <AppBarSeparator/>
            
            <AppBarButton x:ConnectionId='62' Name="volume_button"
                          Icon="Volume"
                          x:Uid="volume_button"
                                                     >
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Horizontal" 
                                    Height="30"
                                    HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='80' Name="volumeIcon_textblock"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE994;"
                                       FontSize="20"
                                       Margin="0,7,3,0"
                                       VerticalAlignment="Center"
                                                                             />
                            <Slider x:ConnectionId='81' Name="volume_slider"
                                    Width="100"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Top"
                                                                               />
                            <TextBlock x:ConnectionId='82' Name="volume_textblock"
                                       Width="30"
                                       HorizontalAlignment="Center"
                                       Margin="10,8,0,0"/>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            
            <AppBarButton x:ConnectionId='63' Name="fullScreen_button"
                          Icon='FullScreen'
                          x:Uid="fullScreen_button"
                                                         />
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='64' Name="openFile_button"
                          Icon="OpenFile"
                          x:Uid="openFile_button"
                                                       />
            <AppBarButton x:ConnectionId='65' Name="musicFolder_button"
                          Icon="Folder"
                          x:Uid="musicFolder_button"
                                                          />
            <AppBarButton x:ConnectionId='66' Name="addFolder_button"
                          Icon="NewFolder"
                          x:Uid="addFolder_button"
                                                        />
            <AppBarButton x:ConnectionId='67' Name="clear_button"
                          Icon="Clear"
                          x:Uid="clear_button"
                                                    />
            <AppBarButton x:ConnectionId='68' Name="backGround_button"
                          Icon="BrowsePhotos"
                          x:Uid="backGround_button">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='78' Name="custom_menu"
                                        x:Uid="custom_menu"
                                                                 />
                        <MenuFlyoutItem x:ConnectionId='79' Name="default_menu" 
                                        x:Uid="default_menu"
                                                                  />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='69' Name="help_button"
                          Icon="Help"
                          x:Uid="help_button"
                                                   />
            <AppBarButton x:ConnectionId='70' Name="mail_button"
                          Icon="Mail"
                          x:Uid="mail_button"
                                                   />
            <AppBarButton x:ConnectionId='71' Name="settings_button"
                          Icon='Setting'
                          x:Uid="settings_button">
                <AppBarButton.Flyout>
                    <MenuFlyout x:ConnectionId='72' x:Name="menu_flyout">
                        <MenuFlyoutItem x:ConnectionId='73' Name="feedBack_menu"
                                        x:Uid="feedBack_menu"
                                        Visibility="Collapsed"
                                                                     />
                        <MenuFlyoutSubItem x:ConnectionId='74' Name="theme_textblock"
                                           x:Uid="theme_textblock">
                            <MenuFlyoutItem x:ConnectionId='75' Name="light_menu"
                                            x:Uid="light_menu"
                                                                    />
                            <MenuFlyoutItem x:ConnectionId='76' Name="dark_menu"
                                            x:Uid="dark_menu"
                                                                   />
                            <MenuFlyoutItem x:ConnectionId='77' Name="defaultTheme_menu"
                                            x:Uid="defaultTheme_menu"
                                                                           />
                        </MenuFlyoutSubItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

